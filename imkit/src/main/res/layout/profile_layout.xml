<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

<!--    <com.mwim.qcloud.tim.uikit.component.TitleBarLayout-->
<!--        android:id="@+id/self_info_title_bar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/page_title_height" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/user_bg_layout"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_user_bg"
                android:orientation="horizontal"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/self_icon"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />
                <LinearLayout
                    android:id="@+id/user_layout"
                    android:layout_toEndOf="@+id/self_icon"
                    android:layout_toStartOf="@+id/arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/self_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/sub_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="12sp"
                        android:textColor="@color/color_9eccfd" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/text_user_remark"
                    android:layout_alignStart="@+id/self_icon"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <com.mwim.qcloud.tim.uikit.component.LineControllerView
                    android:id="@+id/modify_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    app:name="@string/im_department"
                    app:isTop="true"/>
                <com.mwim.qcloud.tim.uikit.component.LineControllerView
                    android:id="@+id/modify_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:name="@string/im_position" />
                <com.mwim.qcloud.tim.uikit.component.LineControllerView
                    android:id="@+id/modify_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:name="@string/im_card" />
                <com.mwim.qcloud.tim.uikit.component.LineControllerView
                    android:id="@+id/modify_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:name="@string/im_email" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/background_color"/>
                <com.mwim.qcloud.tim.uikit.component.LineControllerView
                    android:id="@+id/modify_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:name="@string/modify_setting"
                    app:isTop="true"/>

                <com.mwim.qcloud.tim.uikit.component.LineControllerView
                    android:id="@+id/modify_allow_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:name="@string/add_rule" />

                <Button
                    android:id="@+id/logout_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/btn_margin_left"
                    android:layout_marginRight="@dimen/btn_margin_right"
                    android:layout_marginBottom="@dimen/btn_margin_bottom"
                    android:layout_marginTop="10dp"
                    android:layout_height="@dimen/btn_height_large"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_negative_btn"
                    android:text="@string/exit"
                    android:textColor="@color/negative_text" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
